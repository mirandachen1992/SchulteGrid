.radio-group {
	margin: 40rpx;
	text-align: center;
}

.list {
	width: 80%;
	min-height: 900rpx;
	margin: 80rpx auto;	
	background: url(https://sg.eldesign.cn/SchulteGrid/img/rankinglist_pop.png) no-repeat;
	background-size: 100% 100%;
	border-radius: 20rpx;
}

.list-title {
	height: 100rpx;
	border-radius: 20rpx 20rpx 0 0;
	display:flex;
	justify-content:center;
	align-items:center;
	color: rgb(238, 255, 254);
	font-family: "Lantinghei SC";

}
.list-tab{
	display: inline-block;
}
.list-intro{
	font-size: 22rpx;
	color: rgb(0, 109, 127);
	display:flex;
	justify-content:center;
	align-items:center;
}

.list-container {
	height: 360px;
	overflow: auto;
	padding:0 20rpx;
}
.list-content {
	display: flex;
	justify-content: space-between;
	padding: 25rpx 40rpx;
	font-size: 30rpx;
	font-size: 12px;

}
.list .avatar{
	width:75rpx;
	height: 82rpx;
	float: left;
}
.list .avatar_1st{
	background: url(https://sg.eldesign.cn/SchulteGrid/img/1st_icon.png) no-repeat;
	background-size: 100% 100%;
}
.list .avatar_2nd{
	background: url(https://sg.eldesign.cn/SchulteGrid/img/2nd_icon.png) no-repeat;
	background-size: 100% 100%;
}
.list .avatar_3rd{
	background: url(https://sg.eldesign.cn/SchulteGrid/img/3rd_icon.png) no-repeat;
	background-size: 100% 100%;
}

.list image {
	width: 68rpx;
	height: 68rpx;
	float: left;
	position:relative;
	top:15rpx;
	border-radius: 50%;
	overflow: hidden;
}

.list text {
	line-height: 80rpx;
	margin-left: 10rpx;
}
.list .record {
	width: 20%;
	/*align-self: flex-end;*/
}
.content-left {
	width: 75%;
	margin-right: 5%;
	overflow: hidden;
 	text-overflow: ellipsis;
	 white-space: nowrap;
	 color: rgb(238, 255, 254);
}
